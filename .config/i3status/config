general {
	output_format = "i3bar"
	colors = true
	interval = 5
}

order += "load"
#order += "memory"
order += "disk /"
order += "ethernet _first_"
order += "time"

load {
	format = "L: %1min"
}

#memory {
#	format = "M: %used | %available"
#	threshold_degraded = "1G"
#	format_degraded = "MEMORY < %available"
#}

disk "/" {
	format = "D: %avail"
}

ethernet _first_ {
	format_up = "E: %ip"
	format_down = "E: down"
}

time {
	format = "%d-%m %H:%M"
}
